    "sections": [
      {
        "id": "overview",
        "title": "üìñ Overview",
        "description": "Complete guide to download, setup, and use the Fera Launcher",
        "content": [
          "The Fera Launcher is your gateway to the custom Fortnite private server experience",
          "This tutorial covers everything from initial download to playing your first match",
          "Prerequisites: Windows 10+, macOS 10.15+, or Ubuntu 18.04+"
        ]
      },
      {
        "id": "developer_setup",
        "title": "üõ†Ô∏è Developer Setup (For Server Owners)",
        "description": "How to set up the launcher for development and customization",
        "steps": [
          {
            "step": 1,
            "title": "Install Prerequisites",
            "description": "Install required software",
            "commands": [
              "Download and install Node.js 16+ from https://nodejs.org",
              "Verify installation: node --version && npm --version",
              "Install Git from https://git-scm.com (if not already installed)"
            ],
            "expected_output": "Node.js version 16.x.x or higher, npm version 8.x.x or higher"
          },
          {
            "step": 2,
            "title": "Download the Launcher Code",
            "description": "Get the launcher source code",
            "commands": [
              "git clone https://github.com/your-repo/fera-launcher.git",
              "cd fera-launcher/launcher/desktop-client"
            ],
            "note": "Replace with your actual repository URL"
          },
          {
            "step": 3,
            "title": "Install Dependencies",
            "description": "Install all required packages",
            "commands": [
              "npm install"
            ],
            "expected_output": "All packages installed successfully without errors",
            "troubleshooting": {
              "common_issues": [
                {
                  "issue": "npm install fails",
                  "solution": "Try: npm install --legacy-peer-deps"
                },
                {
                  "issue": "Permission denied on Linux/Mac",
                  "solution": "Use: sudo npm install -g npm"
                }
              ]
            }
          },
          {
            "step": 4,
            "title": "Configure Backend URLs",
            "description": "Set up your Fera backend connection",
            "file": "src/main.js",
            "edit_section": "FERA_CONFIG",
            "example_config": {
              "API_BASE_URL": "https://api.fera.gg",
              "GAME_CDN_URL": "https://cdn.fera.gg",
              "WEBSOCKET_URL": "wss://ws.fera.gg",
              "DISCORD_CLIENT_ID": "your-discord-app-id"
            },
            "note": "Replace URLs with your actual backend endpoints"
          },
          {
            "step": 5,
            "title": "Test in Development Mode",
            "description": "Run the launcher in development mode",
            "commands": [
              "npm run dev"
            ],
            "expected_output": "Fera Launcher window opens with splash screen, then main interface"
          },
          {
            "step": 6,
            "title": "Build for Distribution",
            "description": "Create production builds for your players",
            "commands": [
              "npm run build-win    # For Windows",
              "npm run build-mac    # For macOS", 
              "npm run build-linux  # For Linux",
              "npm run build        # For all platforms"
            ],
            "output_location": "dist/ folder contains installer files"
          }
        ]
      },
      {
        "id": "player_download",
        "title": "üì• Player Download Guide",
        "description": "How players download and install the Fera Launcher",
        "steps": [
          {
            "step": 1,
            "title": "Visit the Download Page",
            "description": "Go to the official Fera website",
            "url": "https://fera.gg/download",
            "note": "Always download from official sources only"
          },
          {
            "step": 2,
            "title": "Choose Your Platform",
            "description": "Select the correct version for your operating system",
            "options": [
              {
                "platform": "Windows",
                "file": "Fera-Launcher-Setup-1.0.0.exe",
                "size": "~80MB",
                "requirements": "Windows 10 64-bit or newer"
              },
              {
                "platform": "macOS",
                "file": "Fera-Launcher-1.0.0.dmg",
                "size": "~90MB",
                "requirements": "macOS 10.15 (Catalina) or newer"
              },
              {
                "platform": "Linux",
                "file": "Fera-Launcher-1.0.0.AppImage",
                "size": "~85MB",
                "requirements": "Ubuntu 18.04+ or equivalent"
              }
            ]
          },
          {
            "step": 3,
            "title": "Download and Install",
            "description": "Download and run the installer",
            "platforms": {
              "windows": {
                "instructions": [
                  "Download the .exe file",
                  "Right-click and 'Run as Administrator'",
                  "Follow the installation wizard",
                  "Choose installation directory (default recommended)",
                  "Wait for installation to complete"
                ],
                "default_path": "C:\\Users\\[Username]\\AppData\\Local\\Programs\\Fera Launcher"
              },
              "macos": {
                "instructions": [
                  "Download the .dmg file", 
                  "Double-click to mount the disk image",
                  "Drag Fera Launcher to Applications folder",
                  "If security warning appears, go to System Preferences > Security & Privacy > Allow"
                ],
                "default_path": "/Applications/Fera Launcher.app"
              },
              "linux": {
                "instructions": [
                  "Download the .AppImage file",
                  "Make it executable: chmod +x Fera-Launcher-1.0.0.AppImage",
                  "Double-click to run, or use terminal: ./Fera-Launcher-1.0.0.AppImage"
                ],
                "note": "No installation required for AppImage"
              }
            }
          }
        ]
